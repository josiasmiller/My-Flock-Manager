<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">
    <TextView
        style="?atrkkrItemTitleStyle"
        android:id="@+id/text_drug_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/interior_spacing_margin"
        android:singleLine="true"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/image_more_options"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_drug_location"
        tools:text="Drug Name"/>
    <TextView
        style="?atrkkrItemCaptionStyle"
        android:id="@+id/text_drug_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/text_drug_name"
        app:layout_constraintEnd_toEndOf="@id/text_drug_name"
        app:layout_constraintTop_toBottomOf="@id/text_drug_name"
        app:layout_constraintBottom_toTopOf="@id/text_lot"
        tools:text="Drug Location"/>
    <TextView
        style="?atrkkrItemCaptionStyle"
        android:id="@+id/text_lot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/interior_spacing_margin"
        android:singleLine="true"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/text_drug_name"
        app:layout_constraintEnd_toStartOf="@id/image_completeness"
        app:layout_constraintTop_toBottomOf="@id/text_drug_location"
        app:layout_constraintBottom_toTopOf="@id/text_drug_dose"
        tools:text="Lot Number"/>
    <ImageView
        android:id="@+id/image_more_options"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/background_ripple"
        android:src="@drawable/ic_more_vert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_drug_name"
        app:layout_constraintBottom_toBottomOf="@id/text_drug_name"/>
    <TextView
        style="?atrkkrItemContentStyle"
        android:id="@+id/text_drug_dose"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/interior_spacing_margin"
        android:maxLines="4"
        android:ellipsize="end"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/text_drug_location"
        app:layout_constraintEnd_toEndOf="@id/text_drug_location"
        app:layout_constraintTop_toBottomOf="@id/text_lot"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Drug Dose Info"/>
    <ImageView
        android:id="@+id/image_completeness"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/text_lot"/>
</androidx.constraintlayout.widget.ConstraintLayout>
