<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">
    <TextView
        style="?atrkkrItemTitleStyle"
        android:id="@+id/text_horn_check_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/interior_spacing_margin"
        android:singleLine="true"
        android:text="@string/text_horn_check"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/image_more_options"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/image_more_options"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/background_ripple"
        android:src="@drawable/ic_more_vert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_horn_check_label"
        app:layout_constraintBottom_toBottomOf="@id/text_horn_check_label"/>
    <ImageView
        android:id="@+id/image_completeness"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="@dimen/interior_spacing_margin"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_container_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="text_horn_check_label,image_more_options"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_container_end"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="start"
        app:constraint_referenced_ids="image_more_options,image_completeness"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_horn_check_summary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/text_horn_check_label"
        app:layout_constraintEnd_toEndOf="@id/barrier_container_end"
        app:layout_constraintTop_toBottomOf="@id/barrier_container_top"
        app:layout_constraintBottom_toBottomOf="@id/image_completeness">
        <TextView
            style="?atrkkrItemSubtitleStyle"
            android:id="@+id/text_bad_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_bad"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/barrier_summary_labels"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/text_sawed_label"/>
        <TextView
            style="?atrkkrItemSubtitleStyle"
            android:id="@+id/text_sawed_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_sawed"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/barrier_summary_labels"
            app:layout_constraintTop_toBottomOf="@id/text_bad_label"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_summary_labels"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:barrierDirection="end"/>
        <com.weyr_associates.animaltrakkerfarmmobile.app.core.widget.Divider
            android:id="@+id/divider_summary"
            android:layout_width="@dimen/divider_thickness"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/interior_spacing_margin"
            app:layout_constraintStart_toStartOf="@id/barrier_summary_labels"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            style="?atrkkrItemSubtitleStyle"
            android:id="@+id/text_bad_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/interior_spacing_margin"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/divider_summary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/text_sawed_summary"
            tools:text="Both"/>
        <TextView
            style="?atrkkrItemSubtitleStyle"
            android:id="@+id/text_sawed_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/interior_spacing_margin"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/divider_summary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_bad_summary"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="None"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
