<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="?atrkkrSectionLabelStyle"
                android:id="@+id/text_section_hooves_trimmed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_margin"
                android:text="@string/text_hooves_trimmed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.weyr_associates.animaltrakkerfarmmobile.app.core.widget.Divider
                android:id="@+id/divider_hoof_trimming"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_thickness"
                android:layout_marginHorizontal="@dimen/activity_margin"
                android:layout_marginVertical="@dimen/interior_spacing_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_section_hooves_trimmed"/>
            <include layout="@layout/view_hoof_selection"
                android:id="@+id/hoof_selection_trimming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/interior_spacing_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider_hoof_trimming"/>
            <TextView
                style="?atrkkrSectionLabelStyle"
                android:id="@+id/text_section_foot_rot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_margin"
                android:text="@string/text_observed_foot_rot"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hoof_selection_trimming"/>
            <com.weyr_associates.animaltrakkerfarmmobile.app.core.widget.Divider
                android:id="@+id/divider_foot_rot"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_thickness"
                android:layout_marginHorizontal="@dimen/activity_margin"
                android:layout_marginVertical="@dimen/interior_spacing_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_section_foot_rot"/>
            <include layout="@layout/view_hoof_selection"
                android:id="@+id/hoof_selection_foot_rot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/interior_spacing_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider_foot_rot"/>
            <TextView
                style="?atrkkrSectionLabelStyle"
                android:id="@+id/text_section_foot_scald"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_margin"
                android:text="@string/text_observed_foot_scald"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hoof_selection_foot_rot"/>
            <com.weyr_associates.animaltrakkerfarmmobile.app.core.widget.Divider
                android:id="@+id/divider_foot_scald"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_thickness"
                android:layout_marginHorizontal="@dimen/activity_margin"
                android:layout_marginVertical="@dimen/interior_spacing_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_section_foot_scald"/>
            <include layout="@layout/view_hoof_selection"
                android:id="@+id/hoof_selection_foot_scald"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/interior_spacing_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider_foot_scald"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <com.weyr_associates.animaltrakkerfarmmobile.app.core.widget.Divider
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_thickness"
        android:layout_marginTop="@dimen/interior_spacing_margin"/>
    <Button
        style="?atrkkrActionButtonStyle"
        android:id="@+id/button_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_margin"
        android:layout_marginVertical="@dimen/interior_spacing_margin"
        android:layout_gravity="end|center_vertical"
        android:text="@string/text_done"/>
</LinearLayout>
