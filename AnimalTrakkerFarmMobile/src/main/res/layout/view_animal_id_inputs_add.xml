<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        style="?atrkkrBasicInfoLabelStyle"
        android:id="@+id/text_id_type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/interior_spacing_margin"
        android:text="@string/text_id_type_label"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/spinner_id_type"/>
    <Button
        style="?atrkkrSpinnerButtonStyle"
        android:id="@+id/spinner_id_type"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_spinner_button"
        android:layout_marginStart="@dimen/interior_spacing_margin"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/divider_type_location"
        app:layout_constraintTop_toBottomOf="@id/text_id_type_label"
        tools:text="Id Type"/>
    <com.weyr_associates.animaltrakkerfarmmobile.app.core.widget.Divider
        android:id="@+id/divider_type_location"
        android:layout_width="@dimen/divider_thickness"
        android:layout_height="0dp"
        android:layout_margin="@dimen/interior_spacing_margin"
        app:layout_constraintStart_toEndOf="@id/spinner_id_type"
        app:layout_constraintEnd_toStartOf="@id/spinner_id_location"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/divider_midpoint_vertical"/>
    <TextView
        style="?atrkkrBasicInfoLabelStyle"
        android:id="@+id/text_id_location_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/interior_spacing_margin"
        android:text="@string/tag_location_name_lbl"
        app:layout_constraintStart_toStartOf="@id/spinner_id_location"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        style="?atrkkrSpinnerButtonStyle"
        android:id="@+id/spinner_id_location"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_spinner_button"
        app:layout_constraintStart_toEndOf="@id/divider_type_location"
        app:layout_constraintEnd_toStartOf="@id/divider_location_color"
        app:layout_constraintTop_toBottomOf="@id/text_id_location_label"
        tools:text="LocAbbr"/>
    <com.weyr_associates.animaltrakkerfarmmobile.app.core.widget.Divider
        android:id="@+id/divider_location_color"
        android:layout_width="@dimen/divider_thickness"
        android:layout_height="0dp"
        android:layout_margin="@dimen/interior_spacing_margin"
        app:layout_constraintStart_toEndOf="@id/spinner_id_location"
        app:layout_constraintEnd_toStartOf="@id/spinner_id_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/divider_midpoint_vertical"/>
    <TextView
        style="?atrkkrBasicInfoLabelStyle"
        android:id="@+id/text_id_color_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/interior_spacing_margin"
        android:text="@string/text_id_color_label"
        app:layout_constraintStart_toStartOf="@id/spinner_id_color"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        style="?atrkkrSpinnerButtonStyle"
        android:id="@+id/spinner_id_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_spinner_button"
        android:layout_marginEnd="@dimen/interior_spacing_margin"
        android:layout_marginBottom="@dimen/interior_spacing_margin"
        app:layout_constraintStart_toEndOf="@id/divider_location_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_id_color_label"
        tools:text="Id Color"/>
    <com.weyr_associates.animaltrakkerfarmmobile.app.core.widget.Divider
        android:id="@+id/divider_midpoint_vertical"
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_thickness"
        android:layout_marginVertical="@dimen/interior_spacing_margin"
        app:layout_constraintStart_toStartOf="@id/spinner_id_type"
        app:layout_constraintEnd_toEndOf="@id/spinner_id_color"
        app:layout_constraintTop_toBottomOf="@id/spinner_id_type"/>
    <EditText
        style="?atrkkrInputFieldStyle"
        android:id="@+id/input_id_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/interior_spacing_margin"
        android:layout_marginBottom="@dimen/interior_spacing_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_add_id"
        app:layout_constraintTop_toBottomOf="@id/divider_midpoint_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Id Number"/>
    <Button
        style="?atrkkrActionButtonStyle"
        android:id="@+id/button_add_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/interior_spacing_margin"
        android:layout_marginVertical="@dimen/interior_spacing_margin"
        android:text="@string/add_id_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/divider_midpoint_vertical"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
