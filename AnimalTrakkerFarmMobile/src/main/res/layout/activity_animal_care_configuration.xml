<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <CheckBox
                style="?atrkkrCheckBoxStyle"
                android:id="@+id/check_box_hooves"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/activity_margin"
                android:layout_marginTop="@dimen/activity_margin"
                android:text="@string/text_check_hooves"/>
            <CheckBox
                style="?atrkkrCheckBoxStyle"
                android:id="@+id/check_box_horns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/activity_margin"
                android:layout_marginTop="@dimen/interior_spacing_margin_half"
                android:text="@string/text_check_horns"/>
            <CheckBox
                style="?atrkkrCheckBoxStyle"
                android:id="@+id/check_box_shoe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/activity_margin"
                android:layout_marginTop="@dimen/interior_spacing_margin_half"
                android:text="@string/text_shoe"/>
            <CheckBox
                style="?atrkkrCheckBoxStyle"
                android:id="@+id/check_box_shear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/activity_margin"
                android:layout_marginTop="@dimen/interior_spacing_margin_half"
                android:text="@string/text_shear"/>
            <CheckBox
                style="?atrkkrCheckBoxStyle"
                android:id="@+id/check_box_wean"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/activity_margin"
                android:layout_marginTop="@dimen/interior_spacing_margin_half"
                android:text="@string/text_wean"/>
            <CheckBox
                style="?atrkkrCheckBoxStyle"
                android:id="@+id/check_box_weigh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/activity_margin"
                android:layout_marginTop="@dimen/interior_spacing_margin_half"
                android:text="@string/text_weigh"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <com.weyr_associates.animaltrakkerfarmmobile.app.core.widget.Divider
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_thickness"
        android:layout_marginTop="@dimen/interior_spacing_margin"/>
    <Button
        style="?atrkkrActionButtonStyle"
        android:id="@+id/button_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_margin"
        android:layout_marginVertical="@dimen/interior_spacing_margin"
        android:layout_gravity="end|center_vertical"
        android:text="@string/text_done"/>
</LinearLayout>
