<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="?selectableItemBackground">
    <TextView
        style="?atrkkrBasicInfoLabelStyle"
        android:id="@+id/text_birth_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_margin"
        android:layout_marginTop="@dimen/activity_margin"
        android:layout_marginBottom="@dimen/interior_spacing_margin_half"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/text_birth_time"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_animal_name"
        tools:text="Birth Date"/>
    <TextView
        style="?atrkkrBasicInfoLabelStyle"
        android:id="@+id/text_birth_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_margin"
        android:layout_marginTop="@dimen/activity_margin"
        android:layout_marginBottom="@dimen/interior_spacing_margin_half"
        app:layout_constraintStart_toEndOf="@id/text_birth_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Birth Time"/>
    <TextView
        style="?atrkkrBasicInfoTextStyle"
        android:id="@+id/text_animal_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/text_birth_date"
        app:layout_constraintEnd_toEndOf="@id/text_birth_time"
        app:layout_constraintTop_toBottomOf="@id/text_birth_date"
        app:layout_constraintBottom_toTopOf="@id/text_sex_name"
        tools:text="Animal Name"/>
    <TextView
        style="?atrkkrBasicInfoTextStyle"
        android:id="@+id/text_registration_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_margin"
        app:layout_constraintStart_toStartOf="@id/text_birth_date"
        app:layout_constraintEnd_toStartOf="@id/guideline_midpoint_horizontal"
        app:layout_constraintTop_toBottomOf="@id/text_animal_name"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Registration Number"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_midpoint_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>
    <TextView
        style="?atrkkrBasicInfoTextStyle"
        android:id="@+id/text_sex_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_margin"
        android:gravity="end"
        app:layout_constraintStart_toEndOf="@id/guideline_midpoint_horizontal"
        app:layout_constraintEnd_toEndOf="@id/text_birth_time"
        app:layout_constraintTop_toBottomOf="@id/text_animal_name"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Sex Name"/>
</androidx.constraintlayout.widget.ConstraintLayout>
