<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:visibility="gone">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            style="?atrkkrBasicInfoTextStyle"
            android:id="@+id/text_no_animal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            tools:text="No Animal Found"/>
        <Button
            style="?atrkkrActionButtonStyle"
            android:id="@+id/btn_add_animal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/interior_spacing_margin"
            android:layout_gravity="center"
            android:text="@string/add_animal_btn"/>
    </LinearLayout>
</FrameLayout>
