<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        style="?atrkkrBasicInfoLabelStyle"
        android:id="@+id/text_alert_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_margin"
        android:layout_marginTop="@dimen/interior_spacing_margin"
        tools:text="Alert Header"/>
    <TextView
        style="?atrkkrBasicInfoTextStyle"
        android:id="@+id/text_alert_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_margin"
        android:layout_marginBottom="@dimen/interior_spacing_margin"
        tools:text="Alert Content"/>
</LinearLayout>
