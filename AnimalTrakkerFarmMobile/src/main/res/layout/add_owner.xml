<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.weyr_associates.animaltrakkerfarmmobile.app.core.widget.TopButtonBar
        android:id="@+id/button_panel_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <GridLayout
        android:id="@+id/owner_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4">
        <TextView
            android:id="@+id/first_name_lbl"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft = "10dp"
            android:layout_column="0"
            android:layout_gravity="left|center"
            android:layout_row="0"
            android:inputType="none"
            android:text="@string/first_name_lbl"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <EditText
            android:id="@+id/first_name_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft = "10dp"
            android:layout_column="0"
            android:layout_row="1"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:typeface="monospace" />
        <TextView
            android:id="@+id/middle_name_lbl"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center|center"
            android:layout_row="0"
            android:inputType="none"
            android:text="@string/middle_name_lbl"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <EditText
            android:id="@+id/middle_name_text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/last_name_lbl"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="left|center"
            android:layout_row="0"
            android:inputType="none"
            android:text="@string/last_name_lbl"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <EditText
            android:id="@+id/last_name_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft = "10dp"
            android:layout_column="2"
            android:layout_row="1"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/farm_name_lbl"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft = "10dp"
            android:layout_column="0"
            android:layout_gravity="left|center"
            android:layout_row="2"
            android:inputType="none"
            android:text="@string/farm_name_lbl"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <EditText
            android:id="@+id/farm_name_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft = "10dp"
            android:layout_column="0"
            android:layout_row="3"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/premise_id_lbl"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center|center"
            android:layout_row="2"
            android:inputType="none"
            android:text="@string/premise_id_lbl"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <EditText
            android:id="@+id/premise_id_text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/farm_prefix_lbl"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="left|center"
            android:layout_row="2"
            android:inputType="none"
            android:text="@string/farm_prefix_lbl"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <EditText
            android:id="@+id/farm_prefix_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="3"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:typeface="monospace" />
    </GridLayout>

    <GridLayout
        android:id="@+id/owner_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="13">
        <CheckBox
            android:id="@+id/checkBoxAddressSame"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft = "10dp"
            android:layout_column="0"
            android:layout_gravity="left|center"
            android:layout_row="0"
            android:textSize="20sp"
            android:textColor= "@color/black"
            android:text="@string/mailing_same_lbl"
            android:onClick="onMailingSame"/>

        <TextView
            android:id="@+id/physical_address_lbl"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft = "10dp"
            android:layout_column="0"
            android:layout_gravity="left|center"
            android:layout_row="1"
            android:inputType="none"
            android:text="@string/physical_address_lbl"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/physical_address1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:typeface="monospace" />

        <EditText
            android:id="@+id/physical_address2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/mailing_address_lbl"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft = "10dp"
            android:layout_column="1"
            android:layout_gravity="left|center"
            android:layout_row="1"
            android:inputType="none"
            android:text="@string/mailing_address_lbl"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/mailing_address1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:typeface="monospace" />

        <EditText
            android:id="@+id/mailing_address2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/physical_city_lbl"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft = "10dp"
            android:layout_column="0"
            android:layout_gravity="left|center"
            android:layout_row="4"
            android:inputType="none"
            android:text="@string/physical_city_lbl"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/physical_city_text"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="5"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/mailing_city_lbl"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft = "10dp"
            android:layout_column="1"
            android:layout_gravity="left|center"
            android:layout_row="4"
            android:inputType="none"
            android:text="@string/mailing_city_lbl"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/mailing_city_text"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="5"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:typeface="monospace" />

        <Spinner
            android:id="@+id/physical_state_spinner"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft = "10dp"
            android:layout_column="0"
            android:layout_gravity="left|center"
            android:layout_row="6"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/mailing_state_spinner"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left|center"
            android:layout_row="6"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/physical_zipcode_lbl"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft = "10dp"
            android:layout_column="0"
            android:layout_gravity="left|center"
            android:layout_row="7"
            android:inputType="none"
            android:text="@string/physical_zipcode_lbl"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/physical_zipcode"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="8"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/mailing_zipcode_lbl"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left|center"
            android:layout_row="7"
            android:inputType="none"
            android:text="@string/mailing_zipcode_lbl"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/mailing_zipcode"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="8"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/main_phone_lbl"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft = "10dp"
            android:layout_column="0"
            android:layout_row="10"
            android:inputType="none"
            android:text="@string/main_phone_lbl"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <EditText
            android:id="@+id/main_phone_text"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft = "10dp"
            android:layout_column="0"
            android:layout_row="11"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/cell_phone_lbl"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="10"
            android:inputType="none"
            android:text="@string/cell_phone_lbl"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <EditText
            android:id="@+id/cell_phone_text"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="11"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:typeface="monospace" />
    </GridLayout>

    <TextView
        android:id="@+id/email_lbl"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft = "10dp"
        android:layout_gravity="left|center"
        android:inputType="none"
        android:text="@string/email_lbl"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/email_text"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft = "10dp"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:typeface="monospace" />

</LinearLayout>