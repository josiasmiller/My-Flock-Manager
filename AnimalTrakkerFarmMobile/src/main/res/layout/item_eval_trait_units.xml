<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_midpoint_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>
    <TextView
        style="?atrkkrBasicInfoTextStyle"
        android:id="@+id/text_eval_trait_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/interior_spacing_margin_half"
        android:layout_marginVertical="@dimen/interior_spacing_margin"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline_midpoint_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Eval Trait Name"/>
    <EditText
        style="?atrkkrInputFieldStyle"
        android:id="@+id/input_eval_trait_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/interior_spacing_margin"
        android:layout_marginVertical="@dimen/interior_spacing_margin"
        android:gravity="end"
        android:autofillHints="notApplicable"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@id/guideline_midpoint_horizontal"
        app:layout_constraintEnd_toStartOf="@id/text_eval_trait_units"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Trait Value"
        tools:visibility="gone"/>
    <TextView
        style="?atrkkrBasicInfoTextStyle"
        android:id="@+id/display_eval_trait_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/interior_spacing_margin"
        android:layout_marginVertical="@dimen/interior_spacing_margin"
        android:gravity="end"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/guideline_midpoint_horizontal"
        app:layout_constraintEnd_toStartOf="@id/text_eval_trait_units"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Trait Value"
        tools:visibility="visible"/>
    <TextView
        style="?atrkkrInputLabelStyle"
        android:id="@+id/text_eval_trait_units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/interior_spacing_margin_half"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginVertical="@dimen/interior_spacing_margin"
        app:layout_constraintEnd_toStartOf="@id/button_scan_weight"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="units"/>
    <ImageButton
        style="?atrkkrActionImageButtonStyle"
        android:id="@+id/button_scan_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/interior_spacing_margin_half"
        android:src="@drawable/ic_scale"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/button_edit_weight"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:visibility="visible"/>
    <ImageButton
        style="?atrkkrActionImageButtonStyle"
        android:id="@+id/button_edit_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:src="@drawable/ic_edit"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:visibility="visible"/>
</androidx.constraintlayout.widget.ConstraintLayout>
