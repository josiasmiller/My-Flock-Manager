<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        style="?atrkkrInputLabelStyle"
        android:id="@+id/text_trait_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/interior_spacing_margin"
        app:layout_constraintStart_toStartOf="@id/spinner_trait_selection"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Trait XX"/>
    <Button
        style="?atrkkrSpinnerButtonStyle"
        android:id="@+id/spinner_trait_selection"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_spinner_button"
        android:layout_marginHorizontal="@dimen/activity_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_trait_label"/>
    <TextView
        style="?atrkkrInputLabelStyle"
        android:id="@+id/text_units_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/interior_spacing_margin"
        android:text="@string/text_units"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/spinner_units_selection"
        app:layout_constraintTop_toBottomOf="@id/spinner_trait_selection"
        tools:visibility="visible"/>
    <Button
        style="?atrkkrSpinnerButtonStyle"
        android:id="@+id/spinner_units_selection"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_spinner_button"
        android:layout_marginHorizontal="@dimen/activity_margin"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_units_label"
        tools:visibility="visible"/>
    <TextView
        style="?atrkkrInputLabelStyle"
        android:id="@+id/text_label_optional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/interior_spacing_margin"
        android:text="@string/text_optional"
        app:layout_constraintEnd_toStartOf="@id/toggle_trait_optional"
        app:layout_constraintTop_toBottomOf="@id/spinner_units_selection"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.appcompat.widget.SwitchCompat
        style="?atrkkrSwitchStyle"
        android:id="@+id/toggle_trait_optional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_margin"
        app:layout_constraintEnd_toStartOf="@id/text_label_deferred"
        app:layout_constraintTop_toBottomOf="@id/spinner_units_selection"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        style="?atrkkrInputLabelStyle"
        android:id="@+id/text_label_deferred"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/interior_spacing_margin"
        android:text="@string/text_deferred"
        app:layout_constraintEnd_toStartOf="@id/toggle_trait_deferred"
        app:layout_constraintTop_toBottomOf="@id/spinner_units_selection"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.appcompat.widget.SwitchCompat
        style="?atrkkrSwitchStyle"
        android:id="@+id/toggle_trait_deferred"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/interior_spacing_margin"
        android:layout_marginTop="@dimen/interior_spacing_margin"
        android:layout_marginBottom="@dimen/interior_spacing_margin"
        app:layout_constraintEnd_toEndOf="@id/spinner_trait_selection"
        app:layout_constraintTop_toBottomOf="@id/spinner_units_selection"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
