<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        style="?atrkkrSpinnerButtonStyle"
        android:id="@+id/spinner_id_type"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_spinner_button"
        android:layout_weight="@dimen/layout_weight_id_type"
        android:layout_gravity="center"/>
    <Button
        style="?atrkkrSpinnerButtonStyle"
        android:id="@+id/spinner_id_location"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_spinner_button"
        android:layout_weight="@dimen/layout_weight_id_location"
        android:layout_gravity="center"/>
    <Button
        style="?atrkkrSpinnerButtonStyle"
        android:id="@+id/spinner_id_color"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_spinner_button"
        android:layout_weight="@dimen/layout_weight_id_color"
        android:layout_gravity="center"/>
    <EditText
        style="?atrkkrInputFieldStyle"
        android:id="@+id/input_id_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="@dimen/layout_weight_id_number"
        android:layout_gravity="center"
        android:inputType="text"/>
</LinearLayout>
