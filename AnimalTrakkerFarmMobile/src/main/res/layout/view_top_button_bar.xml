<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:flow_wrapMode="aligned"
        app:constraint_referenced_ids="image_scanner_status,btn_scan_eid,btn_look_up_animal,btn_show_alert,btn_clear_data,btn_main_action"/>
    <ImageView
        android:id="@+id/image_scanner_status"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginVertical="@dimen/activity_vertical_margin"
        android:padding="8dp"
        android:background="@drawable/background_status_indicator"
        android:src="@drawable/ic_bluetooth_disabled"/>
    <include layout="@layout/view_scanner_button"
        android:id="@+id/btn_scan_eid"
        android:layout_width="@dimen/width_top_panel_button"
        android:layout_height="@dimen/width_top_panel_button"
        android:layout_marginHorizontal="@dimen/interior_spacing_margin"
        android:layout_marginVertical="@dimen/activity_vertical_margin" />
    <Button
        style="?atrkkrTopButtonStyle"
        android:id="@+id/btn_look_up_animal"
        android:layout_width="@dimen/width_top_panel_button"
        android:layout_height="@dimen/height_top_panel_button"
        android:layout_marginHorizontal="@dimen/interior_spacing_margin"
        android:layout_marginVertical="@dimen/activity_vertical_margin"
        android:text="@string/btn_look_up_animal"/>
    <Button
        style="?atrkkrTopButtonStyle"
        android:id="@+id/btn_show_alert"
        android:layout_width="@dimen/width_top_panel_button"
        android:layout_height="@dimen/height_top_panel_button"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginVertical="@dimen/activity_vertical_margin"
        android:text="@string/btn_show_alert" />
    <Button
        style="?atrkkrTopButtonStyle"
        android:id="@+id/btn_clear_data"
        android:layout_width="@dimen/width_top_panel_button"
        android:layout_height="@dimen/height_top_panel_button"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginVertical="@dimen/activity_vertical_margin"
        android:text="@string/btn_clear_data" />
    <Button
        style="?atrkkrTopButtonStyle"
        android:id="@+id/btn_main_action"
        android:layout_width="@dimen/width_top_panel_button"
        android:layout_height="@dimen/height_top_panel_button"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginVertical="@dimen/activity_vertical_margin"
        android:text="@string/btn_update_database" />
</androidx.constraintlayout.widget.ConstraintLayout>
