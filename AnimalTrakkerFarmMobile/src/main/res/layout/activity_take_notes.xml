<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.weyr_associates.animaltrakkerfarmmobile.app.core.widget.TopButtonBar
        android:id="@+id/button_panel_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            style="?atrkkrInputLabelStyle"
            android:id="@+id/label_note_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/text_custom_note"
            app:layout_constraintStart_toStartOf="@id/input_custom_note_text"
            app:layout_constraintTop_toTopOf="parent"/>
        <EditText
            style="?atrkkrInputFieldStyle"
            android:id="@+id/input_custom_note_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_margin"
            android:layout_marginTop="@dimen/interior_spacing_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_note_text"/>
        <TextView
            style="?atrkkrInputLabelStyle"
            android:id="@+id/label_predefined_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_margin"
            android:layout_marginBottom="@dimen/interior_spacing_margin"
            android:text="@string/text_predefined_notes"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_add_note"
            app:layout_constraintBottom_toTopOf="@id/divider_notes"/>
        <Button
            style="?atrkkrActionButtonStyle"
            android:id="@+id/button_add_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/interior_spacing_margin"
            android:text="@string/button_add_predefined_note"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_custom_note_text"
            app:layout_constraintBottom_toTopOf="@id/divider_notes"/>
        <com.weyr_associates.animaltrakkerfarmmobile.app.core.widget.Divider
            style="?atrkkrDividerStyleVertical"
            android:id="@+id/divider_notes"
            android:layout_width="0dp"
            android:layout_height="@dimen/divider_thickness"
            android:layout_marginTop="@dimen/interior_spacing_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_add_note"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_notes"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_notes"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
