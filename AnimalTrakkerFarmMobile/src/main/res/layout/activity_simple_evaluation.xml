<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.weyr_associates.animaltrakkerfarmmobile.app.core.widget.TopButtonBar
        android:id="@+id/button_panel_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <include layout="@layout/view_animal_evaluation"
        android:id="@+id/animal_evaluation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:id="@+id/container_select_evaluation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">
        <com.weyr_associates.animaltrakkerfarmmobile.app.core.widget.Divider
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_thickness"
            android:layout_marginHorizontal="@dimen/activity_margin"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                style="?atrkkrSpinnerButtonStyle"
                android:id="@+id/spinner_evaluation_selection"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_spinner_button"
                android:layout_weight="1"
                android:maxWidth="@dimen/width_max_spinner_button"
                android:layout_marginStart="@dimen/activity_margin"
                android:layout_marginEnd="@dimen/interior_spacing_margin"
                android:layout_marginVertical="@dimen/interior_spacing_margin"/>
            <Button
                style="?atrkkrActionButtonStyle"
                android:id="@+id/button_load_evaluation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginVertical="@dimen/interior_spacing_margin"
                android:text="@string/button_load"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
