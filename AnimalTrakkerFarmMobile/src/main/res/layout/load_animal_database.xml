<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:clickable="false"
        android:ems="10"
        android:enabled="true"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:scrollHorizontally="false"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:typeface="monospace" >
    </EditText>

<GridLayout
    android:id="@+id/topwindow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="8">

    <Button
        android:id="@+id/select_db_file_btn"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:onClick="selectFileDB"
        android:text="@string/select_animal_database_btn" />

    <Button
        android:id="@+id/backup_db_btn"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:onClick="backupRealDB"
        android:text="@string/backup_animal_database_btn" />


    <Button
        android:id="@+id/back_btn"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:onClick="allDone"
        android:text="@string/back_btn" />

</GridLayout>

</LinearLayout>