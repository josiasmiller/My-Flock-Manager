<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/main_menu_screen_margin">
        <Button
            style="?atrkkrMenuCTAButtonStyle"
            android:id="@+id/btn_simple_lambing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menu_option_text_simple_lambing"/>
        <Button
            style="?atrkkrMenuCTAButtonStyle"
            android:id="@+id/btn_detailed_lambing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menu_option_text_detailed_lambing"/>
        <Button
            style="?atrkkrMenuCTAButtonStyle"
            android:id="@+id/btn_simple_births"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menu_option_text_simple_births"/>
        <Button
            style="?atrkkrMenuCTAButtonStyle"
            android:id="@+id/btn_add_female_birthing_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menu_option_text_add_female_birthing_history"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
